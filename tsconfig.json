{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "preserveSymlinks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "paths": {
      "types": ["./types/*"]
    }
  },
  "include": [
    "lib/**/*.ts"
  ],
  "files": [
    "lib/index.ts"
  ]
}
